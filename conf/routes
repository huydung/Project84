# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.homepage
POST    /rpx                                    Application.rpx

GET     /users/profile                          Users.profile
POST    /users/profile                          Users.saveProfile

GET     /projects                               Projects.overview
GET     /project/create                         Projects.create
POST    /project/create                         Projects.save
GET     /project/{id}                           Projects.dashboard
GET     /project/{project_id}/memberships       Memberships.dashboard
GET     /project/{id}/settings                  Projects.structure

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}

